<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtBueltatutakoZenbakia"
        android:layout_width="136dp"
        android:layout_height="181dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="378dp"
        android:gravity="center"
        android:text="0"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/edit1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtHasierakoZenbakia"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/txtHasierakoZenbakia"
        android:layout_width="151dp"
        android:layout_height="179dp"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="74dp"
        android:gravity="center"
        android:text="0"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtBueltatutakoZenbakia"
        app:layout_constraintEnd_toStartOf="@+id/txtBueltatutakoZenbakia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtBueltatutakoZenbakia" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="83dp"
        android:layout_marginBottom="36dp"
        android:text="@string/txtJasotakoa"
        app:layout_constraintBottom_toTopOf="@+id/txtBueltatutakoZenbakia"
        app:layout_constraintEnd_toEndOf="@+id/txtBueltatutakoZenbakia"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="@+id/txtBueltatutakoZenbakia"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="@string/txtHasierakoa"
        app:layout_constraintBottom_toTopOf="@+id/txtHasierakoZenbakia"
        app:layout_constraintEnd_toEndOf="@+id/txtHasierakoZenbakia"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="@+id/txtHasierakoZenbakia" />

    <EditText
        android:id="@+id/edit1"
        android:layout_width="270dp"
        android:layout_height="47dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="17dp"
        android:ems="10"
        android:hint="@string/editTxtZenbakia"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="27dp"
        android:onClick="Bidali"
        android:text="@string/btnBidali"
        app:layout_constraintBottom_toBottomOf="@+id/edit1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edit1"
        app:layout_constraintTop_toTopOf="@+id/edit1"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>