<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="63dp"
        android:text="@string/galdera"
        app:layout_constraintBottom_toTopOf="@+id/btnBider"
        app:layout_constraintEnd_toEndOf="@+id/btnZati" />

    <Button
        android:id="@+id/btnBider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:text="X"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnZati"
        app:layout_constraintEnd_toStartOf="@+id/btnZati"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnZati"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="181dp"
        android:layout_marginEnd="29dp"
        android:text="/"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnBider"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGehi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:text="+"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnKen"
        app:layout_constraintEnd_toStartOf="@+id/btnKen"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnKen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="29dp"
        android:text="-"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnGehi"
        app:layout_constraintTop_toBottomOf="@+id/btnZati" />
</androidx.constraintlayout.widget.ConstraintLayout>